// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  password  String
  createdAt DateTime @default(now())
  cards     Card[]
}

model Type {
  id    String @id
  cards Card[]
}

model SubType {
  id    String @id
  cards Card[]
}

model SuperType {
  id    String @id
  cards Card[]
}

model Card {
  id            String  @id @default(uuid())
  name          String  @unique
  fullType      String
  power         Float?
  toughness     Float?
  manaCost      String?
  manaValue     Float
  colors        Int
  colorIdentity Int
  formats       Int

  // Relations
  types      Type[]
  subTypes   SubType[]
  superTypes SuperType[]
  players    Player[]
}
